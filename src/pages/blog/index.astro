---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => (b.data.pubDate?.valueOf?.() ?? 0) - (a.data.pubDate?.valueOf?.() ?? 0),
);

const getDisplayDate = (post) => {
	if (post.data.pubDate) return post.data.pubDate;
	const match = post.id.match(/^(\d{4}-\d{2}-\d{2})/);
	if (!match) return undefined;
	const parsed = new Date(match[1]);
	return Number.isNaN(parsed.valueOf()) ? undefined : parsed;
};

const getExcerpt = (post) => {
	const body = post.body ?? '';
	if (!body.includes('<!--more-->')) return '';
	const raw = body.split('<!--more-->')[0] ?? '';
	const text = raw
		.replace(/```[\s\S]*?```/g, '')
		.replace(/`[^`]*`/g, '')
		.replace(/!\[[^\]]*\]\([^)]*\)/g, '')
		.replace(/\[([^\]]*)\]\([^)]*\)/g, '$1')
		.replace(/<[^>]+>/g, '')
		.replace(/^[#>*\-]+\s*/gm, '')
		.replace(/\n{2,}/g, '\n')
		.replace(/\s+/g, ' ')
		.trim();
	return text;
};
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: var(--content-width);
				max-width: var(--content-max-width);
			}
			ul {
				display: grid;
				grid-template-columns: 1fr;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			.meta {
				margin-top: 0.25rem;
				display: flex;
				align-items: center;
				justify-content: space-between;
				gap: 0.75rem;
				color: rgb(var(--gray));
				font-size: 0.85rem;
			}
			.meta .date {
				margin: 0;
				white-space: nowrap;
			}
			.tags {
				margin: 0;
				display: flex;
				flex-wrap: wrap;
				gap: 0.4rem;
			}
			.tag {
				padding: 0.15rem 0.5rem;
				border-radius: 999px;
				background: rgba(var(--gray-light), 0.4);
				font-weight: bold;
				font-size: 0.85rem;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
				font-size: 1.5rem;
			}
			.excerpt {
				margin: 0.5rem 0 0;
				color: rgb(var(--gray));
				font-size: 0.95rem;
				line-height: 1.6;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					text-align: center;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts
							.filter((post) => post.data.postId)
							.map((post) => (
							<li>
								<a href={`/blog/${post.data.postId}.html`}>
									{post.data.heroImage && (
										<Image width={720} height={360} src={post.data.heroImage} alt="" />
									)}
									<h4 class="title">{post.data.title}</h4>
									{getExcerpt(post) && <p class="excerpt">{getExcerpt(post)}</p>}
									{(post.data.tags?.length > 0 || getDisplayDate(post)) && (
										<div class="meta">
											{post.data.tags?.length > 0 ? (
												<div class="tags">
													{post.data.tags.map((tag) => (
														<span class="tag">#{tag}</span>
													))}
												</div>
											) : (
												<div />
											)}
											{getDisplayDate(post) && (
												<p class="date">
													<FormattedDate date={getDisplayDate(post)} />
												</p>
											)}
										</div>
									)}
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
