---
import { SITE_TITLE, GITHUB_USERNAME } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2>
			<a href="/" class="site-link">
				<img src="/favicon.ico" alt="logo" class="logo" />
				<span>{SITE_TITLE}</span>
			</a>
		</h2>
		<div class="internal-links">
			<HeaderLink href="/">首页</HeaderLink>
			<HeaderLink href="/blog">博客</HeaderLink>
			<HeaderLink href="/archive">归档</HeaderLink>
			<HeaderLink href="/about">关于</HeaderLink>
		</div>
		<div class="social-links">
			<a href={`https://github.com/${GITHUB_USERNAME}`} target="_blank">
				<span class="sr-only">GitHub</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24"
				>
					<path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					>
					</path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	header nav {
		width: var(--content-width);
		max-width: var(--content-max-width);
		margin: 0 auto;
		padding: 0;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	.site-link {
		display: flex;
		align-items: center;
		gap: 0.5em;
		font-size: 0.9em;
	}
	.logo {
		width: 32px;
		height: 32px;
		border-radius: 50%;
		display: flex;
		align-items: center;
	}
	.internal-links {
		margin-left: auto;
	}
	nav {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	nav a {
		padding: 0.4em 0.2em 0.4em 0.2em;
		color: var(--black);
		text-decoration: none;
		font-size: 0.8em;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
